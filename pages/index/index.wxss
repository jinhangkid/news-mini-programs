/**index.wxss**/

.tabbar-top{
  position: fixed;
  top: 0;
  height: 75rpx;
  width: 100%;
  z-index: 10;
  background-color: rgba(76,159,224,1);
}
.tabbarbutton{
  position:relative;
  float:left;
  width: 107rpx;
  height: 70rpx;
  font-size: 27rpx;
  padding-top: 12rpx;
  text-align: center;
}

.tabbarbutton .tabbarTitle{
  color: white;
  text-align: center;
  padding-bottom: 8rpx;
}

.tabbarbutton.seleted .tabbarTitle{
  font-size: 30rpx;
  color: white;
  padding-bottom: 8rpx;
}

.tabbarbutton.seleted .tabbarLine{
  position: relative;
  left: 40rpx;
  width: 26rpx;
  height: 4rpx;
  top: 10rpx;
  background-color: white;
}
.tabbarLine{
  width: 26rpx;
  height: 4rpx;
  background-color: rgba(76,159,224,1);
}

.list{
  position: relative;
  top: 70rpx;
  z-index:-2;  
  background-color: rgba(247,244,236,1);
}
 .news-hot{
  position: relative;
  margin:90rpx 15rpx 15rpx 15rpx;
  height: 400rpx;
}
 .news-hot .tag{
  position: absolute;
  right: 0;
  padding:6rpx 15rpx;
  border-radius: 0 0 0 18rpx;
  color: white;
  background-color: rgba(255, 0, 0, 0.5);
  font-size: 24rpx;
}
.news-hot .img{
 position: absolute;
 z-index: -1;
 width: 100%;
 height: 100%;
 border-radius: 3px;
}
.news-hot .title{
  position: absolute;
  bottom: 60rpx;
  font-size: 28rpx;
  color:white; 
  left: 15rpx;
  right: 15rpx;
}
.hot-bottom{
  position: absolute;
  text-align: left;
  bottom: 15rpx;
  left: 15rpx;
  display: flex;
}
.news-hot .hot-bottom .from{
  color: gray;
  font-size: 26rpx;
  padding-right: 30rpx;
}

.news-hot .hot-bottom .time{
  color: gray;
  font-size: 26rpx;
}

.news-list-bg{
  background: white;
}
.news-list{
  display: flex;
  align-items: center;
  height: 180rpx;
  margin: 0 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.news-list .left{
  width:  500rpx;
}
.news-list .title{
  margin-bottom: 20rpx;
  font-size: 28rpx;
  line-height: 34rpx;
}
.news-list .list-bottom{
  display: flex;  
  font-size: 25rpx;
  color: gray;
}
.news-list .list-bottom .time{
  margin-left: 30rpx;
}

.news-list .img{
  margin-left: 20rpx;
   width: 200rpx; 
  height: 120rpx; 
}